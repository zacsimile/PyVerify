program bubble
pre n > 0
post forall i j, 0 <= i ==> i <= j ==> j < n ==> a[i] < a[j]
is

  bound := n;
  while bound > 0
    inv forall j k, bound <= j ==> j < k ==> k < n ==> a[j] < a[k]
  do
    i := 0;
    while i < bound - 1
      inv forall j k, bound <= j ==> j < k ==> k < n ==> a[j] < a[k]
    do
      if a[i] > a[i+1] then
        t := a[i];
        a[i] := a[i+1];
        a[i+1] := t;
      end
      i := i + 1;
    end
    bound := bound - 1;
  end

end